<% include ../partials/header %> 


     <header class="jumbotron">
         <div class="container row">


          <div class="col-md-4 col-xs-6">

             <img alt="mascot" src="/img/bantu.png" id="mascot">

          </div>

          <div class="col-md-8 col-xs-12">

             <h2>Find your Outdoor Adventure!</h2>
             <p>Making camping fun!</p>
             <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
             </p>

          </div>
             
         </div>
     </header>
     <hr>

     <div class="container">
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail th-index">
                   <img src="<%= campground.image %>">
                   <div class="caption">
                       <h4><%= campground.name %></h4>
                   </div>
                   <p>
                       <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
    </div>


<% include ../partials/footer %>
